<?xml version="1.0" encoding="utf-8"?>
        
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/page_background"
	    android:orientation="vertical"
	    android:padding="15dp" >	    	    
	    

	   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">       

        	<TextView
            	android:id="@+id/member_gender_arrow"
            	android:background="@drawable/input_white"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop= "10dp"
	            android:textSize="18sp"
	            android:gravity="center_vertical|right"
	            android:layout_alignParentRight="true"
	            android:drawableRight="@drawable/icon_head_down" />
	       <TextView
	            android:id="@+id/member_gender"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"         
	            android:hint="@string/member_hint_gender"
	            android:paddingLeft="10dp"
	            android:textSize="18sp"
	            android:paddingTop="15dp"
	            android:singleLine="true" />
	    </RelativeLayout>
	    
	   
	    
	    <Button
	        android:id="@+id/member_finish"
	        style="@style/btn_orange"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:text="@string/member_finished" />
	</LinearLayout>


